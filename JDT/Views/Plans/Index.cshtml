
@{
    ViewBag.Title = "Plans";
}
<div class="content container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="page-title">Your Fitness Plans<small> View, Create, Edit your fitness plans.</small></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <section class="widget">
                <header>
                    <h4>
                        <i class="fa fa-list-alt"></i>
                        Fitness Plans
                    </h4>
                </header>
                <div class="body">
                    <blockquote>
                        To create a new fitness plan click 'New.' To edit
                        or delete your plan select the record and click 'Edit'
                        or 'Delete'.  To create or view workouts associated
                        with your fitness plan click the number link benieth the
                        # Workouts column.  Search for fitness plans using the 'Search'
                        box.
                    </blockquote>
                    <table class="table table-striped table-bordered" id="datatable-table" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th class="hidden-xs">
                                    Description
                                </th>
                                <th class="hidden-xs">
                                    Date Created
                                </th>
                                <th>
                                    # Workouts
                                </th>
                            </tr>
                        </thead>
                       
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>

@section scripts{
@Scripts.Render("~/bundles/dashboard/jqueryplugins")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/site")
@Scripts.Render("~/Content/js/CrudOps/Acct/Plans.js")
@Scripts.Render("~/bundles/jqueryplugins")

<script>
    $(document).ready(function () {
        initListAuth();
        
    });

</script>
}
