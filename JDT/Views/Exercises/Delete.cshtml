@model JDT.Models.Exercise

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>JdtTask</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

    <div class="display-label">DateModified</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateModified)</div>

    <div class="display-label">MinSets</div>
    <div class="display-field">@Model.RecMinSets</div>

    <div class="display-label">MaxSets</div>
    <div class="display-field">@Model.RecMaxSets</div>

    <div class="display-label">MinReps</div>
    <div class="display-field">@Model.RecMinReps</div>

    <div class="display-label">MaxReps</div>
    <div class="display-field">@Model.RecMaxReps</div>

    <div class="display-label">Duration</div>
    <div class="display-field">@Model.RecDuration</div>

    <div class="display-label">WorkOuts</div>
    <div class="display-field">@(Model.WorkOuts == null ? "None" : Model.WorkOuts.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm("Delete", "JdtTasks", new { id1 = ViewBag.WorkOutId }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index", new { id = ViewBag.WorkOutId })
    </p>
}
@section scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dashboard/jqueryplugins")
    @Scripts.Render("~/bundles/backboneunderscore")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
}

