@model JDT.Models.Recipe

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Meal</legend>

    <div class="display-label">Name</div>
    <div class="display-field" id="Name"></div>

    <div class="display-label">Description</div>
    <div class="display-field" id="Description"></div>

    <div class="display-label">DateCreated</div>
    <div class="display-field" id="DateCreated"></div>

    <div class="display-label">DateModified</div>
    <div class="display-field" id="DateModified"></div>

    <div class="display-label">Ingredients</div>
    <div class="display-field" id="Ingredients"></div>
</fieldset>
@using (Html.BeginForm("Delete", "Meals", FormMethod.Post, new { id="Delete", @class = "form-horizontal" }))
{
    <p>
        <input type="submit" value="Delete" /> |
        <a href="#" id="List">Back to List</a>
    </p>
}
@section scripts{

    @Scripts.Render("~/bundles/dashboard/jqueryplugins")
    @Scripts.Render("~/bundles/backboneunderscore")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
@Scripts.Render("~/Content/js/CrudOps/Recipes.js")

<script>
    $(document).ready(function () {
        initDetailsAuth();
    });

</script>
}






