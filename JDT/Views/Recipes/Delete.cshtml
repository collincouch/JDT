@model JDT.Models.Recipe

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Meal</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

    <div class="display-label">DateModified</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateModified)</div>

    <div class="display-label">Diets</div>
    <div class="display-field">@(Model.Diets == null ? "None" : Model.Diets.Count.ToString())</div>

    <div class="display-label">Ingredients</div>
    <div class="display-field">@(Model.Ingredients == null ? "None" : Model.Ingredients.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm("Delete", "Meals", new { id1 = ViewBag.DietId }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index", new { id = ViewBag.MealId })
    </p>
}
@section scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dashboard/jqueryplugins")
    @Scripts.Render("~/bundles/backboneunderscore")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
}






