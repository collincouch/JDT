@model IEnumerable<JDT.Models.Recipe>
@{
    ViewBag.Title = "Recipes";
}
<div class="content container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="page-title">Your Recipes<small>View, Create, Edit from here.</small></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <section class="widget">
                <header>
                    <h4>
                        <i class="fa fa-list-alt"></i>
                        Meals
                    </h4>
                </header>
                <div class="body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="hidden-xs-portrait">
                                    #
                                </th>
                                <th>
                                    Name
                                </th>
                                <th class="hidden-xs">
                                    Description
                                </th>
                                <th class="hidden-xs">
                                    Date Created
                                </th>
                                <th>
                                    #Ingredients
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           
                        </tbody>
                    </table>
                    <blockquote>
                        <button id="AddNew" class="btn btn-default btn-sm" onclick="#">
                            Add New
                        </button>
                    </blockquote>
                </div>
            </section>
        </div>
    </div>
</div>
@section scripts{
   
    @Scripts.Render("~/bundles/dashboard/jqueryplugins")
    @Scripts.Render("~/bundles/backboneunderscore")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
@Scripts.Render("~/Content/js/CrudOps/Recipes.js")

<script>
    $(document).ready(function () {
        initListAuth();
    });

</script>
}

